include ../components/splide.pug

//- .loading Loading ...
+splide("slider",arr)
    if val.img 
        pre= JSON.stringify(val, null, 2)
        img(src= val.img, alt="", style=`object-position: ${val.position};`)
    if val.video 
        video(src= val.video, width="100%", height="auto", controls muted autoplay, id= val.id)

    .text(class = idx === 0 ? "show":"")= val.text